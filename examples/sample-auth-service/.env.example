# Environment Configuration Template
# Copy this file to .env and configure with your values

# === APPLICATION ===
APP_NAME="Auth Service"
DEBUG=false
LOG_LEVEL=INFO

# === SERVICE ===
SERVICE_HOST=0.0.0.0
SERVICE_PORT=8001

# === DATABASE ===
# Auto-injected by Gravity Framework as AUTH_DB_URL
# If running standalone:
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/auth_db

# === REDIS ===
# Auto-injected by Gravity Framework as AUTH_SESSIONS_URL
# If running standalone:
REDIS_URL=redis://localhost:6379

# === JWT (REQUIRED - Keep Secret!) ===
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION=3600

# === CORS ===
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# === SESSION ===
SESSION_EXPIRATION=86400

# === RATE LIMITING ===
RATE_LIMIT_PER_MINUTE=60
